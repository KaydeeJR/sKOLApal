<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timetable_new_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:focusable="true">

    <TextView
        android:id="@+id/table_cell_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:textColor="@color/colorFont"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/table_cell_monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_margin="10dp"
        android:textColor="@color/colorFont"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/table_cell_tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_margin="10dp"
        android:textColor="@color/colorFont"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/table_cell_wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_column="3"
        android:textColor="@color/colorFont"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/table_cell_thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_column="4"
        android:textColor="@color/colorFont"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/table_cell_friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_column="5"
        android:textColor="@color/colorFont"
        android:textSize="16sp" />
</TableRow>